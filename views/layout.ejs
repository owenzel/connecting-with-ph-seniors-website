<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Connecting With Parma Heights Seniors</title>
</head>
<body>
    <%- include ("./partials/navbar"); %>
    <%- include ("./partials/questions_btn"); %>
    <%- body %>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="http://multidatespickr.sourceforge.net/jquery-ui.multidatespicker.js"></script>

    <script>
        //Initialize Materialize components
        M.Sidenav.init(document.querySelector('.sidenav'));
        M.FormSelect.init(document.querySelector('#rsvpUsername'));
        M.FormSelect.init(document.querySelector('#reoccur'));
        M.FormSelect.init(document.querySelector('#leaderUsername'));
        M.Modal.init(document.querySelectorAll('.modal'));
        M.Dropdown.init(document.querySelector('.dropdown-trigger'), { hover: true, constrainWidth: false });
        M.Collapsible.init(document.querySelectorAll('.collapsible'));

        // Initialize the Quill editor and handle submitting the description entered in the editor in creating and editing an activity
        if (document.querySelector('#editor')) {
            // Initialize Quill editor
            let quill = new Quill('#editor', {
                modules: {
                    toolbar: [
                        ['bold', 'italic', 'underline'],
                        ['link'],
                        [{ list: 'ordered' }, { list: 'bullet' }]
                    ]
                },
                theme: 'snow'
            });

            let activityForm = document.querySelector('#activityForm');
            activityForm.onsubmit = () => {
                // Populate hidden input with quill content on submit
                const about = document.querySelector('input[name=body]');
                about.value = quill.root.innerHTML;
            }
        }

        // Open the Sign Up Cart when the user is on the home page
        if (document.location.pathname == '/') {
            M.Dropdown.getInstance(document.querySelector('.dropdown-trigger')).open();
        }
    </script>
</body>
</html>