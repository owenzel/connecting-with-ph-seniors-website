<%- include ("./../partials/messages"); %>
<% const availableDates = getDateRange(2); %>

<div class="container">
    <h3>Create an Activity Post</h3>
    <div class="row">
        <form action="/activities/create" method="POST" class="col s12">
            <div class="row">
                <div class="input-field">
                    <input
                        type="text"
                        id="title"
                        name="title"
                    >
                    <label for="title">Activity Title</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <input
                        type="date"
                        id="date"
                        name="date"
                        min=<%= formatDate(availableDates[0], 'YYYY-MM-DD') %>
                        max=<%= formatDate(availableDates[1], 'YYYY-MM-DD') %>
                    >
                    <label for="date">Activity Date</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <input
                        type="time"
                        id="time"
                        name="time"
                    >
                    <label for="time">Activity Time</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <input
                        type="text"
                        id="leaderName"
                        name="leaderName"
                    >
                    <label for="leaderName">Activity Leader</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <input
                        type="text"
                        id="leaderUsername"
                        name="leaderUsername"
                    >
                    <label for="leaderUsername">Activity Leader Username (if they have an account)</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <select id="status" name="status">
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                    </select>
                    <label for="status">Activity Status</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <h5>Activity Description</h5>
                    <textarea id="body" name="body"></textarea>
                </div>
            </div>

            <div class="row">
                <button type="submit" class="btn"><i class="fas fa-check"></i> Save</button>
                <a href="/activities/my-activities" class="btn orange"><i class="fas fa-times-circle"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>