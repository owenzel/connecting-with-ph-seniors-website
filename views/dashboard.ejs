<div class="container">
    <h1>My Activities Posts Dashboard</h1>
    <p>Welcome, <%= user.name %>!</p>
    <p>Here are your activity posts.</p>

    <% if (activities.length > 0) { %>
        <table class="striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% activities.forEach(function(activity) { %>
                    <tr>
                        <td><a href="/activities/<%= activity._id %>"><%= activity.title %></a></td>
                        <td><%= formatDate(activity.createdAt, 'MMMM Do YYYY, h:mm a') %></td>
                        <td><span class="dash-status"><%= activity.status %></span></td>
                        <td>
                            <a href="/activities/edit/<%= activity._id %>" class="btn btn-float">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form action="/activities/<%= activity._id %>" method="POST" id="delete-form">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn red">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>You have not created any activity posts yet.</p>
    <% } %>
</div>